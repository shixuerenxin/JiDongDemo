<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.qizhiwei20171215.MainActivity"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/ban_show"
        android:layout_width="match_parent"
        android:layout_height="400dp"></com.youth.banner.Banner>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#ff0000"
        android:id="@+id/tv_newprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/but_addshopingcar"
        android:text="加入购物车"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


</LinearLayout>
